@model Movie


<h1>Movie Form</h1>
@* Form to add new movies *@
@* Title, Rating, Edited, and CopiedToPlex are required *@

<form method="post">
    <input type="hidden" asp-for="MovieID" />
    <div>
        <label asp-for="CategoryID">Movie Category</label>
        <select asp-for="CategoryID">
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.Categories){
            <option value="@c.CategoryID">@c.CategoryName</option>
        }
        </select>
    </div>
    <div>
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" required />
    </div>
    <div>
        <label asp-for="Director">Director:</label>
        <input asp-for="Director"/>
    </div>
    <div>
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" type="number" min="1888"/>
    </div>
    <div>
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <div>
    <label asp-for="Edited"></label>
        <input asp-for="Edited" type="radio" value="true" id="yes" required/>
        <label for="yes">yes</label>
        <input asp-for="Edited" type="radio" value="false" id="no" required/>
        <label for="no">no</label>
    </div>
    <div>
        <label asp-for="LentTo">Lent to:</label>
        <input asp-for="LentTo"/>
    </div>
    <div>
        <label asp-for="CopiedToPlex">Copied to Plex:</label>
            <input asp-for="CopiedToPlex" label="yes" type="radio" value=1 id="yes" required/>
            <label for="yes">yes</label>
            <input asp-for="CopiedToPlex" type="radio" value=0 id="no" required/>
            <label for="no">no</label>
    </div>
    <div>
        <label asp-for="Notes">Notes:</label>
        <textarea asp-for="Notes"maxlength="25" style="width:300px"></textarea>
    </div>
    <button type="submit">Submit</button>

</form>
